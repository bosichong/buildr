<project name="yeti">

    <!-- macro to test files -->
    <macrodef name="yeti">

        
        <attribute name="failonerror" default="true" />
        <element name="files" implicit="true"/>
        
        <sequential>
            <echo>Documenting with yeti Toolkit</echo>   
            <apply executable="${buildr.yeti}" failonerror="@{failonerror}">
                <files/>
                <srcfile/>
            </apply>
        </sequential>    
    </macrodef>        
</project>
